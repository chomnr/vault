generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}


model Vault {
  id              String       @id @default(uuid()) @map("_id")
  name            String
  maxCredentials  Int
  credentials     Credential[]
  secret          String
  iv              String
}

type Credential {
  type        String
  name        String
  iv          String
  data        String // should be formatted like JSON, it's in a string it can be stored encrypted...
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}